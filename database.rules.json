{
  "rules": {
    ".read": "false",
    ".write": "false",
    
    "users": {
      "$uid": {
        // Users can read and write only their own data
        ".read": "auth !== null && auth.uid === $uid",
        ".write": "auth !== null && auth.uid === $uid"
      }
    },
    
    "betaCodes": {
      // Only authenticated users can read beta codes
      ".read": "auth !== null",
      // Only admins can write to beta codes collection
      ".write": "auth !== null && root.child('admins').child(auth.uid).val() === true",
      
      "$code": {
        // Allow all authenticated users to write to a specific code (for claiming)
        ".write": "auth !== null"
      }
    },
    
    "feedback": {
      "$type": {
        // Admins can read all feedback
        ".read": "auth !== null && root.child('admins').child(auth.uid).val() === true",
        // Anyone can write feedback if they're authenticated and email is verified
        ".write": "auth !== null && auth.email_verified === true"
      }
    },
    
    "applications": {
      // Only admins can read all applications
      ".read": "auth !== null && root.child('admins').child(auth.uid).val() === true",
      // Anyone can write an application
      ".write": "true"
    },
    
    "notifications": {
      // Only admins can read notifications
      ".read": "auth !== null && root.child('admins').child(auth.uid).val() === true",
      // Anyone can write a notification request
      ".write": "true"
    },
    
    "admins": {
      // Only admins can read the admin list
      ".read": "auth !== null && root.child('admins').child(auth.uid).val() === true",
      // Only admins can modify the admin list
      ".write": "auth !== null && root.child('admins').child(auth.uid).val() === true"
    }
  }
} 